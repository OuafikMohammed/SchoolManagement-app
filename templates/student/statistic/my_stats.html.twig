{% extends 'base.html.twig' %}

{% block title %}My Statistics{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <!-- Header -->
    <div class="mb-4">
        <h1 class="h2">My Academic Statistics</h1>
        <p class="text-muted">Comprehensive overview of your academic performance</p>
    </div>

    <!-- Overall Stats Card -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6 class="card-title">Overall Average</h6>
                    <h2 class="card-text mb-0">{{ overallAverage|number_format(2, '.', '') }}/20</h2>
                    <small>Across {{ enrollmentCount }} courses</small>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title text-muted">Active Enrollments</h6>
                    <h2 class="card-text">{{ enrollmentCount }}</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Course Performance Table -->
    {% if courseStats %}
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Performance by Course</h5>
            </div>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Course</th>
                            <th class="text-center">Average</th>
                            <th class="text-center">Ranking</th>
                            <th class="text-center">Progress</th>
                            <th class="text-center">Total Grades</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for stats in courseStats %}
                            <tr>
                                <td>
                                    <strong>{{ stats.course.title }}</strong>
                                    {% if stats.course.teacher %}
                                        <br>
                                        <small class="text-muted">{{ stats.course.teacher.name ?: stats.course.teacher.email }}</small>
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    <span class="badge {% if stats.average >= 16 %}bg-success{% elseif stats.average >= 12 %}bg-info{% elseif stats.average >= 10 %}bg-warning{% else %}bg-danger{% endif %} p-2">
                                        {{ stats.average|number_format(2, '.', '') }}/20
                                    </span>
                                </td>
                                <td class="text-center">
                                    {% if stats.ranking %}
                                        <span class="badge bg-primary">#{{ stats.ranking.rank }}</span>
                                    {% else %}
                                        <span class="badge bg-secondary">N/A</span>
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    {% if stats.progress.trend == 'improving' %}
                                        <span class="badge bg-success" title="Improving">
                                            <i class="bi bi-graph-up"></i>
                                        </span>
                                    {% elseif stats.progress.trend == 'declining' %}
                                        <span class="badge bg-danger" title="Declining">
                                            <i class="bi bi-graph-down"></i>
                                        </span>
                                    {% else %}
                                        <span class="badge bg-info" title="Stable">
                                            <i class="bi bi-dash-lg"></i>
                                        </span>
                                    {% endif %}
                                </td>
                                <td class="text-center">{{ stats.progress.total_grades }}</td>
                                <td class="text-center">
                                    <a href="{{ path('app_student_grades_course', {courseId: stats.course.id}) }}" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Detailed Statistics -->
        <div class="row mt-4">
            {% for stats in courseStats %}
                <div class="col-lg-6 mb-3">
                    <div class="card h-100">
                        <div class="card-header bg-light">
                            <h6 class="card-title mb-0">{{ stats.course.title }}</h6>
                        </div>
                        <div class="card-body">
                            <div class="row g-2 text-center">
                                <div class="col-6 col-md-3">
                                    <small class="text-muted d-block">Min Grade</small>
                                    <strong>{{ stats.progress.min_grade }}</strong>
                                </div>
                                <div class="col-6 col-md-3">
                                    <small class="text-muted d-block">Max Grade</small>
                                    <strong>{{ stats.progress.max_grade }}</strong>
                                </div>
                                <div class="col-6 col-md-3">
                                    <small class="text-muted d-block">Average</small>
                                    <strong>{{ stats.progress.average }}</strong>
                                </div>
                                <div class="col-6 col-md-3">
                                    <small class="text-muted d-block">Assessments</small>
                                    <strong>{{ stats.progress.total_grades }}</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i>
            <strong>No course statistics available.</strong> Enroll in courses to see your academic statistics.
        </div>
    {% endif %}

    <!-- Back Button -->
    <div class="mt-4">
        <a href="{{ path('app_student_grades') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Grades
        </a>
    </div>
</div>
{% endblock %}
