{% extends 'base.html.twig' %}

{% block title %}My Grades{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="mb-4">
        <h1 class="h2">My Grades</h1>
        <p class="text-muted">View all your grades and course averages</p>
    </div>

    <!-- Overall Average Card -->
    {% if overallAverage %}
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card text-center bg-primary text-white">
                    <div class="card-body">
                        <h6 class="card-title">Overall Average</h6>
                        <h2 class="card-text">{{ overallAverage|number_format(2, '.', '') }}/20</h2>
                        <small class="text-white-50">Across all courses</small>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card text-center">
                    <div class="card-body">
                        <h6 class="card-title text-muted">Enrolled Courses</h6>
                        <h2 class="card-text">{{ enrollments|length }}</h2>
                        <small class="text-muted">Active enrollments</small>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    <!-- Courses with Grades -->
    {% if courseGrades %}
        {% for courseGrade in courseGrades %}
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <div class="row align-items-center">
                        <div class="col">
                            <h5 class="mb-0">{{ courseGrade.course.title }}</h5>
                            {% if courseGrade.course.teacher %}
                                <small class="text-muted">Taught by {{ courseGrade.course.teacher.name ?: courseGrade.course.teacher.email }}</small>
                            {% endif %}
                        </div>
                        <div class="col-auto">
                            <span class="badge {% if courseGrade.average >= 16 %}bg-success{% elseif courseGrade.average >= 12 %}bg-info{% elseif courseGrade.average >= 10 %}bg-warning{% else %}bg-danger{% endif %}">
                                {{ courseGrade.average|number_format(2, '.', '') }}/20
                            </span>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    {% if courseGrade.course.description %}
                        <p class="text-muted">{{ courseGrade.course.description }}</p>
                    {% endif %}

                    <!-- Grade Statistics -->
                    <div class="row mb-3">
                        <div class="col-md-3 text-center">
                            <small class="text-muted d-block">Total Grades</small>
                            <strong>{{ courseGrade.gradeCount }}</strong>
                        </div>
                        <div class="col-md-3 text-center">
                            <small class="text-muted d-block">Average</small>
                            <strong>{{ courseGrade.average|number_format(2, '.', '') }}</strong>
                        </div>
                        {% if courseGrade.ranking %}
                            <div class="col-md-3 text-center">
                                <small class="text-muted d-block">Ranking</small>
                                <strong>#{{ courseGrade.ranking.rank }}</strong>
                            </div>
                            <div class="col-md-3 text-center">
                                <small class="text-muted d-block">Class Average</small>
                                <strong>{{ courseGrade.ranking.average|number_format(2, '.', '') }}</strong>
                            </div>
                        {% endif %}
                    </div>

                    <!-- Grades Table -->
                    {% if courseGrade.grades %}
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Type</th>
                                        <th class="text-center">Grade</th>
                                        <th class="text-center">Coefficient</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for grade in courseGrade.grades %}
                                        <tr>
                                            <td>
                                                <span class="badge bg-light text-dark">{{ grade.type|capitalize }}</span>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge {% if grade.value >= 16 %}bg-success{% elseif grade.value >= 12 %}bg-info{% elseif grade.value >= 10 %}bg-warning{% else %}bg-danger{% endif %}">
                                                    {{ grade.value }}/20
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-secondary">{{ grade.coefficient }}Ã—</span>
                                            </td>
                                            <td>{{ grade.createdAt|date('M d, Y') }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-3 d-flex justify-content-between align-items-center flex-wrap gap-2">
                            <a href="{{ path('app_student_grades_course', {courseId: courseGrade.course.id}) }}" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye"></i> View Detailed Stats
                            </a>
                            <div class="btn-group" role="group">
                                <a href="{{ path('pdf_student_bulletin', {courseId: courseGrade.course.id}) }}" class="btn btn-sm btn-outline-success pdf-download" data-course="{{ courseGrade.course.title }}">
                                    <i class="bi bi-download"></i> Download Bulletin
                                </a>
                                <a href="{{ path('pdf_student_bulletin_view', {courseId: courseGrade.course.id}) }}" class="btn btn-sm btn-outline-info pdf-view" target="_blank" data-course="{{ courseGrade.course.title }}">
                                    <i class="bi bi-eye-fill"></i> View PDF
                                </a>
                            </div>
                        </div>
                    {% else %}
                        <p class="text-muted mb-0"><i class="bi bi-info-circle"></i> No grades recorded yet in this course.</p>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    {% else %}
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i>
            <strong>No grades yet.</strong> Your teachers will add grades as they evaluate your work.
        </div>
    {% endif %}

    <!-- Empty State -->
    {% if not enrollments %}
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle"></i>
            <strong>Not enrolled in any courses.</strong> <a href="{{ path('app_enrollment_available') }}" class="alert-link">Browse and enroll in courses</a>.
        </div>
    {% endif %}

    <!-- Action Links -->
    <div class="mt-4 text-center">
        <a href="{{ path('app_student_statistics') }}" class="btn btn-outline-primary">
            <i class="bi bi-graph-up"></i> View Overall Statistics
        </a>
    </div>
</div>

<style>
    .pdf-download, .pdf-view {
        transition: all 0.3s ease;
    }
    
    .pdf-download:hover, .pdf-view:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    
    .pdf-download:disabled, .pdf-view:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const pdfButtons = document.querySelectorAll('.pdf-download, .pdf-view');
        
        pdfButtons.forEach(button => {
            button.addEventListener('click', function(e) {
                const courseName = this.getAttribute('data-course');
                const isView = this.classList.contains('pdf-view');
                
                // Show loading state
                const originalHtml = this.innerHTML;
                this.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Loading...';
                this.disabled = true;
                
                // Set timeout to restore button (simulates loading)
                setTimeout(() => {
                    this.innerHTML = originalHtml;
                    this.disabled = false;
                    
                    // Show success message
                    const alertDiv = document.createElement('div');
                    alertDiv.className = 'alert alert-success alert-dismissible fade show mt-3';
                    alertDiv.role = 'alert';
                    alertDiv.innerHTML = `
                        <i class="bi bi-check-circle"></i>
                        <strong>${isView ? 'Opening' : 'Downloading'} PDF for "${courseName}"</strong>
                        ${isView ? ' - Your PDF will open in a new tab.' : ' - Check your downloads folder.'}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    `;
                    
                    const container = button.closest('.card-body') || button.closest('.card');
                    if (container) {
                        container.insertBefore(alertDiv, container.firstChild);
                        
                        // Auto-dismiss after 5 seconds
                        setTimeout(() => {
                            alertDiv.remove();
                        }, 5000);
                    }
                }, 1500);
            });
            
            // Add error handler
            button.addEventListener('error', function(e) {
                this.innerHTML = '<i class="bi bi-exclamation-triangle"></i> Error';
                this.classList.add('btn-danger');
                
                const alertDiv = document.createElement('div');
                alertDiv.className = 'alert alert-danger alert-dismissible fade show mt-3';
                alertDiv.role = 'alert';
                alertDiv.innerHTML = `
                    <i class="bi bi-exclamation-triangle"></i>
                    <strong>Error:</strong> Failed to load PDF for "${button.getAttribute('data-course')}"
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                `;
                
                const container = button.closest('.card-body') || button.closest('.card');
                if (container) {
                    container.insertBefore(alertDiv, container.firstChild);
                }
            });
        });
    });
</script>
{% endblock %}

