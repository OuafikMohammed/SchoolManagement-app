{% extends 'base.html.twig' %}

{% block title %}Grade Management{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2">Grade Management</h1>
            <p class="text-muted">Manage and track student grades across all your courses</p>
        </div>
        <div class="btn-group" role="group">
            <a href="{{ path('app_grade_add') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Grade
            </a>
            {% if selected_course %}
                <a href="{{ path('app_grade_export', {id: selected_course.id}) }}" class="btn btn-secondary">
                    <i class="bi bi-download"></i> Export CSV
                </a>
            {% endif %}
        </div>
    </div>

    <!-- Filters Section -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="GET" class="row g-3">
                <div class="col-md-4">
                    <label for="courseFilter" class="form-label">Filter by Course</label>
                    <select name="course" id="courseFilter" class="form-select">
                        <option value="">All Courses</option>
                        {% for course in courses %}
                            <option value="{{ course.id }}" {% if filters.course == course.id %}selected{% endif %}>
                                {{ course.title }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="typeFilter" class="form-label">Filter by Type</label>
                    <select name="type" id="typeFilter" class="form-select">
                        <option value="">All Types</option>
                        <option value="exam" {% if filters.type == 'exam' %}selected{% endif %}>Exam</option>
                        <option value="assignment" {% if filters.type == 'assignment' %}selected{% endif %}>Assignment</option>
                        <option value="participation" {% if filters.type == 'participation' %}selected{% endif %}>Participation</option>
                        <option value="project" {% if filters.type == 'project' %}selected{% endif %}>Project</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="sortBy" class="form-label">Sort By</label>
                    <select name="sort" id="sortBy" class="form-select">
                        <option value="created" {% if filters.sort == 'created' %}selected{% endif %}>Recently Created</option>
                        <option value="student" {% if filters.sort == 'student' %}selected{% endif %}>Student Name</option>
                        <option value="value" {% if filters.sort == 'value' %}selected{% endif %}>Grade Value (High to Low)</option>
                        <option value="type" {% if filters.sort == 'type' %}selected{% endif %}>Grade Type</option>
                    </select>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-outline-primary">Apply Filters</button>
                    <a href="{{ path('app_grade_index') }}" class="btn btn-outline-secondary">Reset</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Grades Table -->
    {% if grades %}
        <div class="card">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Student</th>
                            <th>Course</th>
                            <th class="text-center">Grade</th>
                            <th>Type</th>
                            <th class="text-center">Coefficient</th>
                            <th class="text-end">Date</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for grade in grades %}
                            <tr>
                                <td>
                                    <div>
                                        <strong>{{ grade.student.name ?: grade.student.email }}</strong>
                                        <br>
                                        <small class="text-muted">{{ grade.student.email }}</small>
                                    </div>
                                </td>
                                <td>{{ grade.course.title }}</td>
                                <td class="text-center">
                                    <span class="badge {% if grade.value >= 16 %}bg-success{% elseif grade.value >= 12 %}bg-info{% elseif grade.value >= 10 %}bg-warning{% else %}bg-danger{% endif %}">
                                        {{ grade.value }}/20
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark">{{ grade.type|capitalize }}</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-secondary">{{ grade.coefficient }}Ã—</span>
                                </td>
                                <td class="text-end text-muted small">
                                    {{ grade.createdAt|date('M d, Y') }}
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('app_grade_edit', {id: grade.id}) }}" class="btn btn-outline-primary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{ grade.id }}" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Delete Modals -->
        {% for grade in grades %}
            <div class="modal fade" id="deleteModal{{ grade.id }}" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Delete Grade</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <p>Are you sure you want to delete the grade of <strong>{{ grade.value }}/20</strong> for <strong>{{ grade.student.name ?: grade.student.email }}</strong> in <strong>{{ grade.course.title }}</strong>?</p>
                            <p class="text-muted small">This action cannot be undone.</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <form method="POST" action="{{ path('app_grade_delete', {id: grade.id}) }}" style="display:inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ grade.id) }}">
                                <button type="submit" class="btn btn-danger">Delete Grade</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i>
            <strong>No grades found.</strong> Start by <a href="{{ path('app_grade_add') }}" class="alert-link">adding a new grade</a>.
        </div>
    {% endif %}
</div>

{% endblock %}
