{% extends 'base.html.twig' %}

{% block title %}{{ course.title }} - Grades & Statistics{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <!-- Header -->
    <div class="mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h2">{{ course.title }}</h1>
                <p class="text-muted">Detailed grade analysis and statistics</p>
            </div>
            <a href="{{ path('app_grade_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Grades
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <h6 class="card-title text-muted">Class Average</h6>
                    <h2 class="card-text">
                        {% if statistics.average_grade %}
                            {{ statistics.average_grade|number_format(2, '.', '') }}/20
                        {% else %}
                            N/A
                        {% endif %}
                    </h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <h6 class="card-title text-muted">Highest Grade</h6>
                    <h2 class="card-text">
                        {% if statistics.max_grade %}
                            {{ statistics.max_grade|number_format(1, '.', '') }}/20
                        {% else %}
                            N/A
                        {% endif %}
                    </h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <h6 class="card-title text-muted">Lowest Grade</h6>
                    <h2 class="card-text">
                        {% if statistics.min_grade %}
                            {{ statistics.min_grade|number_format(1, '.', '') }}/20
                        {% else %}
                            N/A
                        {% endif %}
                    </h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <h6 class="card-title text-muted">Total Grades</h6>
                    <h2 class="card-text">{{ statistics.total_grades }}</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Ranking Table -->
    <div class="row mb-4">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Student Rankings</h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Rank</th>
                                <th>Student</th>
                                <th>Average Grade</th>
                                <th>Total Grades</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% if ranking %}
                                {% for entry in ranking %}
                                    <tr>
                                        <td>
                                            <span class="badge {% if entry.rank == 1 %}bg-gold{% elseif entry.rank == 2 %}bg-silver{% elseif entry.rank == 3 %}bg-info{% else %}bg-light text-dark{% endif %}">
                                                #{{ entry.rank }}
                                            </span>
                                        </td>
                                        <td>
                                            <strong>{{ entry.name }}</strong>
                                            <br>
                                            <small class="text-muted">{{ entry.email }}</small>
                                        </td>
                                        <td>
                                            <span class="badge {% if entry.average >= 16 %}bg-success{% elseif entry.average >= 12 %}bg-info{% elseif entry.average >= 10 %}bg-warning{% else %}bg-danger{% endif %}">
                                                {{ entry.average|number_format(2, '.', '') }}/20
                                            </span>
                                        </td>
                                        <td>{{ entry.grade_count }} grades</td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center text-muted py-4">No students with grades yet</td>
                                </tr>
                            {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Student Count Card -->
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Class Summary</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label text-muted small">Students with Grades</label>
                        <p class="h5">{{ statistics.student_count }}</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-muted small">Total Assessments</label>
                        <p class="h5">{{ statistics.total_grades }}</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-muted small">Grades Recorded</label>
                        <p class="h5">100%</p>
                    </div>
                </div>
            </div>

            <a href="{{ path('app_grade_add_course', {courseId: course.id}) }}" class="btn btn-primary w-100">
                <i class="bi bi-plus-circle"></i> Add Grade
            </a>
        </div>
    </div>

    <!-- All Grades Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">All Grades in {{ course.title }}</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Student</th>
                        <th>Grade</th>
                        <th>Type</th>
                        <th>Coefficient</th>
                        <th>Date</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% if grades %}
                        {% for grade in grades %}
                            <tr>
                                <td>{{ grade.student.name ?: grade.student.email }}</td>
                                <td>
                                    <span class="badge {% if grade.value >= 16 %}bg-success{% elseif grade.value >= 12 %}bg-info{% elseif grade.value >= 10 %}bg-warning{% else %}bg-danger{% endif %}">
                                        {{ grade.value }}/20
                                    </span>
                                </td>
                                <td><span class="badge bg-light text-dark">{{ grade.type|capitalize }}</span></td>
                                <td><span class="badge bg-secondary">{{ grade.coefficient }}Ã—</span></td>
                                <td>{{ grade.createdAt|date('M d, Y H:i') }}</td>
                                <td class="text-center">
                                    <a href="{{ path('app_grade_edit', {id: grade.id}) }}" class="btn btn-sm btn-outline-primary" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">No grades recorded yet</td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
