{% extends 'base.html.twig' %}

{% block title %}My Courses{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>My Courses</h1>
  <a href="{{ path('app_course_new') }}" class="btn btn-primary">+ New Course</a>
</div>

{% if courses %}
  <div class="row">
    {% for course in courses %}
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">{{ course.title }}</h5>
            <p class="card-text text-muted">{{ course.description|slice(0, 100) }}...</p>
            <a href="{{ path('app_course_show', {id: course.id}) }}" class="btn btn-sm btn-outline-primary">View</a>
            <a href="{{ path('app_course_edit', {id: course.id}) }}" class="btn btn-sm btn-outline-secondary">Edit</a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
{% else %}
  <p class="alert alert-info">No courses yet. <a href="{{ path('app_course_new') }}">Create one!</a></p>
{% endif %}
{% endblock %}
