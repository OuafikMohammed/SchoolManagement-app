{% extends 'base.html.twig' %}

{% block title %}{{ course.title }} - Statistics{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <!-- Header -->
    <div class="mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h2">{{ course.title }} - Detailed Statistics</h1>
                <p class="text-muted">Complete analysis of student grades and performance</p>
            </div>
            <div class="btn-group">
                <a href="{{ path('app_statistic_index') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Dashboard
                </a>
                <a href="{{ path('app_statistic_export', {courseId: course.id}) }}" class="btn btn-outline-primary">
                    <i class="bi bi-download"></i> Export JSON
                </a>
            </div>
        </div>
    </div>

    <!-- Key Statistics -->
    {% if statistics %}
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h6 class="card-title text-muted">Class Average</h6>
                        <h2 class="card-text">{{ statistics.average_grade|number_format(2, '.', '') }}/20</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h6 class="card-title text-muted">Highest Grade</h6>
                        <h2 class="card-text">{{ statistics.max_grade|number_format(1, '.', '') }}/20</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h6 class="card-title text-muted">Lowest Grade</h6>
                        <h2 class="card-text">{{ statistics.min_grade|number_format(1, '.', '') }}/20</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h6 class="card-title text-muted">Total Grades</h6>
                        <h2 class="card-text">{{ statistics.total_grades }}</h2>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    <!-- Student Rankings -->
    {% if ranking %}
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">Student Rankings</h5>
            </div>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Rank</th>
                            <th>Student</th>
                            <th class="text-center">Average Grade</th>
                            <th class="text-center">Total Grades</th>
                            <th class="text-center">Performance</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for entry in ranking %}
                            <tr>
                                <td>
                                    <span class="badge {% if entry.rank == 1 %}bg-warning{% elseif entry.rank == 2 %}bg-secondary{% elseif entry.rank == 3 %}bg-danger{% else %}bg-light text-dark{% endif %} p-2">
                                        #{{ entry.rank }}
                                    </span>
                                </td>
                                <td>
                                    <strong>{{ entry.name }}</strong>
                                    <br>
                                    <small class="text-muted">{{ entry.email }}</small>
                                </td>
                                <td class="text-center">
                                    <span class="badge {% if entry.average >= 16 %}bg-success{% elseif entry.average >= 12 %}bg-info{% elseif entry.average >= 10 %}bg-warning{% else %}bg-danger{% endif %} p-2">
                                        {{ entry.average|number_format(2, '.', '') }}/20
                                    </span>
                                </td>
                                <td class="text-center">{{ entry.grade_count }}</td>
                                <td class="text-center">
                                    {% if entry.average >= 16 %}
                                        <span class="badge bg-success">Excellent</span>
                                    {% elseif entry.average >= 14 %}
                                        <span class="badge bg-info">Very Good</span>
                                    {% elseif entry.average >= 12 %}
                                        <span class="badge bg-info">Good</span>
                                    {% elseif entry.average >= 10 %}
                                        <span class="badge bg-warning">Satisfactory</span>
                                    {% else %}
                                        <span class="badge bg-danger">Needs Improvement</span>
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    <a href="{{ path('app_statistic_student_course', {studentId: entry.student_id, courseId: course.id}) }}" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}

    <!-- Grade Distribution -->
    {% if distribution %}
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h6 class="card-title mb-0">Grade Distribution</h6>
                    </div>
                    <div class="card-body">
                        {% for dist in distribution %}
                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-1">
                                    <label class="form-label mb-0">{{ dist.grade_range }}</label>
                                    <small class="text-muted">{{ dist.count }} ({{ dist.percentage }}%)</small>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" 
                                         style="width: {{ dist.percentage }}%;" 
                                         aria-valuenow="{{ dist.percentage }}" 
                                         aria-valuemin="0" 
                                         aria-valuemax="100">
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h6 class="card-title mb-0">Summary</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6">
                                <small class="text-muted d-block">Students Graded</small>
                                <h5>{{ statistics.student_count }}</h5>
                            </div>
                            <div class="col-6">
                                <small class="text-muted d-block">Total Assessments</small>
                                <h5>{{ statistics.total_grades }}</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    <!-- All Grades Table -->
    {% if grades %}
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">All Grades</h5>
            </div>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Student</th>
                            <th>Grade</th>
                            <th>Type</th>
                            <th class="text-center">Coefficient</th>
                            <th>Recorded</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for grade in grades %}
                            <tr>
                                <td>{{ grade.student.name ?: grade.student.email }}</td>
                                <td>
                                    <span class="badge {% if grade.value >= 16 %}bg-success{% elseif grade.value >= 12 %}bg-info{% elseif grade.value >= 10 %}bg-warning{% else %}bg-danger{% endif %}">
                                        {{ grade.value }}/20
                                    </span>
                                </td>
                                <td><span class="badge bg-light text-dark">{{ grade.type|capitalize }}</span></td>
                                <td class="text-center"><span class="badge bg-secondary">{{ grade.coefficient }}Ã—</span></td>
                                <td>{{ grade.createdAt|date('M d, Y H:i') }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% else %}
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i>
            <strong>No grades yet.</strong> Add grades to see statistics.
        </div>
    {% endif %}
</div>
{% endblock %}

