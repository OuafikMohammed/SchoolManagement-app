{% extends 'base.html.twig' %}

{% block title %}{{ student.name|default(student.email) }} - {{ course.title }} Statistics{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <!-- Header -->
    <div class="mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h2">{{ student.name ?: student.email }}</h1>
                <p class="text-muted">{{ course.title }} Performance Details</p>
            </div>
            <a href="{{ path('app_statistic_course', {courseId: course.id}) }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Course Stats
            </a>
        </div>
    </div>

    <!-- Performance Summary -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <h6 class="card-title text-muted">Course Average</h6>
                    <h2 class="card-text">
                        {% if rankingPosition %}
                            <span class="badge {% if rankingPosition.average >= 16 %}bg-success{% elseif rankingPosition.average >= 12 %}bg-info{% elseif rankingPosition.average >= 10 %}bg-warning{% else %}bg-danger{% endif %} p-3">
                                {{ rankingPosition.average|number_format(2, '.', '') }}/20
                            </span>
                        {% else %}
                            <span class="text-muted">N/A</span>
                        {% endif %}
                    </h2>
                </div>
            </div>
        </div>
        {% if rankingPosition %}
            <div class="col-md-3 mb-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h6 class="card-title text-muted">Ranking</h6>
                        <h2 class="card-text">
                            <span class="badge bg-primary p-3">#{{ rankingPosition.rank }}</span>
                        </h2>
                    </div>
                </div>
            </div>
        {% endif %}
        <div class="col-md-3 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <h6 class="card-title text-muted">Total Grades</h6>
                    <h2 class="card-text">{{ grades|length }}</h2>
                </div>
            </div>
        </div>
        {% if progress %}
            <div class="col-md-3 mb-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h6 class="card-title text-muted">Trend</h6>
                        <p>
                            {% if progress.trend == 'improving' %}
                                <span class="badge bg-success p-2">
                                    <i class="bi bi-graph-up"></i> Improving
                                </span>
                            {% elseif progress.trend == 'declining' %}
                                <span class="badge bg-danger p-2">
                                    <i class="bi bi-graph-down"></i> Declining
                                </span>
                            {% elseif progress.trend == 'stable' %}
                                <span class="badge bg-info p-2">
                                    <i class="bi bi-dash-lg"></i> Stable
                                </span>
                            {% else %}
                                <span class="badge bg-secondary">N/A</span>
                            {% endif %}
                        </p>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>

    <!-- Progress Details -->
    {% if progress %}
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">Performance Details</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <label class="form-label text-muted small">Highest Grade</label>
                        <p><strong>{{ progress.max_grade }}/20</strong></p>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label text-muted small">Lowest Grade</label>
                        <p><strong>{{ progress.min_grade }}/20</strong></p>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label text-muted small">Current Average</label>
                        <p><strong>{{ progress.average|number_format(2, '.', '') }}/20</strong></p>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label text-muted small">Assessments</label>
                        <p><strong>{{ progress.total_grades }}</strong></p>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    <!-- Averages by Type -->
    {% if averagesByType %}
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">Grades by Assessment Type</h5>
            </div>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Assessment Type</th>
                            <th class="text-center">Average</th>
                            <th class="text-center">Count</th>
                            <th class="text-center">Performance</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for type, data in averagesByType %}
                            <tr>
                                <td><span class="badge bg-light text-dark">{{ type|capitalize }}</span></td>
                                <td class="text-center">
                                    <span class="badge {% if data.average >= 16 %}bg-success{% elseif data.average >= 12 %}bg-info{% elseif data.average >= 10 %}bg-warning{% else %}bg-danger{% endif %}">
                                        {{ data.average|number_format(2, '.', '') }}/20
                                    </span>
                                </td>
                                <td class="text-center">{{ data.count }}</td>
                                <td class="text-center">
                                    {% if data.average >= 14 %}
                                        <span class="badge bg-success"><i class="bi bi-check-lg"></i> Good</span>
                                    {% elseif data.average >= 10 %}
                                        <span class="badge bg-info"><i class="bi bi-dash-lg"></i> Average</span>
                                    {% else %}
                                        <span class="badge bg-danger"><i class="bi bi-exclamation-lg"></i> Needs Work</span>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}

    <!-- All Grades -->
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">All Grades Recorded</h5>
        </div>
        {% if grades %}
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Type</th>
                            <th class="text-center">Grade</th>
                            <th class="text-center">Coefficient</th>
                            <th>Recorded</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for grade in grades %}
                            <tr>
                                <td><span class="badge bg-light text-dark">{{ grade.type|capitalize }}</span></td>
                                <td class="text-center">
                                    <span class="badge {% if grade.value >= 16 %}bg-success{% elseif grade.value >= 12 %}bg-info{% elseif grade.value >= 10 %}bg-warning{% else %}bg-danger{% endif %}">
                                        {{ grade.value }}/20
                                    </span>
                                </td>
                                <td class="text-center"><span class="badge bg-secondary">{{ grade.coefficient }}Ã—</span></td>
                                <td>{{ grade.createdAt|date('M d, Y H:i') }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="card-body">
                <p class="text-muted mb-0">No grades recorded yet for this student.</p>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
