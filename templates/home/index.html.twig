{% extends 'base.html.twig' %}

{% block title %}Home - School Management{% endblock %}

{% block body %}
<div class="hero-section bg-light py-5 text-center">
  <div class="container">
    <h1 class="display-4 fw-bold">School Management System</h1>
    <p class="lead text-muted">Complete solution for course and grade management</p>
    
    {% if not app.user %}
      <div class="mt-4">
        <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg me-2">Login</a>
        <a href="{{ path('app_register') }}" class="btn btn-outline-primary btn-lg">Register as Student</a>
      </div>
    {% else %}
      <p class="text-muted">Welcome back, <strong>{{ app.user.name }}</strong>!</p>
    {% endif %}
  </div>
</div>

<div class="container my-5">
  <div class="row">
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-body text-center">
          <h3 class="card-title">{{ total_courses }}</h3>
          <p class="card-text text-muted">Available Courses</p>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-body text-center">
          <h3 class="card-title">{{ total_users }}</h3>
          <p class="card-text text-muted">Registered Users</p>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-body text-center">
          <h3 class="card-title">100%</h3>
          <p class="card-text text-muted">Uptime</p>
        </div>
      </div>
    </div>
  </div>
</div>

{% if recent_courses %}
  <div class="container mb-5">
    <h2 class="mb-4">Featured Courses</h2>
    <div class="row">
      {% for course in recent_courses %}
        <div class="col-md-4 mb-3">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title">{{ course.title }}</h5>
              <p class="card-text text-muted small">{{ course.description|slice(0, 80) }}{% if course.description|length > 80 %}...{% endif %}</p>
              <p class="text-muted"><small>by {{ course.teacher.name }}</small></p>
              {% if app.user and is_granted('ROLE_STUDENT') %}
                <a href="{{ path('student_enrollment_available') }}" class="btn btn-sm btn-primary">Enroll Now</a>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}

<div class="bg-light py-5">
  <div class="container text-center">
    <h2 class="mb-4">Features</h2>
    <div class="row">
      <div class="col-md-3 mb-4">
        <h5>ðŸ“š Course Management</h5>
        <p class="text-muted">Create, edit, and manage courses</p>
      </div>
      <div class="col-md-3 mb-4">
        <h5>ðŸ‘¥ Enrollment System</h5>
        <p class="text-muted">Students browse and enroll in courses</p>
      </div>
      <div class="col-md-3 mb-4">
        <h5>ðŸ“Š Grade Tracking</h5>
        <p class="text-muted">Teachers assign and manage grades</p>
      </div>
      <div class="col-md-3 mb-4">
        <h5>ðŸ“ˆ Statistics & Reports</h5>
        <p class="text-muted">View analytics and generate PDFs</p>
      </div>
    </div>
  </div>
</div>
{% endblock %}
